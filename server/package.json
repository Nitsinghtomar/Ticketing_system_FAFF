{
  "name": "faff-server",
  "version": "1.0.0",
  "description": "FAFF Backend API Server",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx src/server.ts",
    "dev:nodemon": "nodemon --exec \"tsx src/server.ts\"",
    "start": "node dist/server.js",
    "build": "tsc",
    "test": "jest",
    "db:seed": "tsx src/database/seedData.ts",
    "db:seed:simple": "node seed.js",
    "db:reset": "rm -f database.sqlite && npm run db:seed",
    "db:reset:win": "del database.sqlite 2>nul && npm run db:seed",
    "migrate:up": "tsx --import ./node_modules/knex/bin/cli.js migrate:up",
    "migrate:latest": "tsx --import ./node_modules/knex/bin/cli.js migrate:latest",
    "migrate:rollback": "cross-env NODE_OPTIONS=\"--loader ts-node/esm\" knex migrate:rollback"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.52.0",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "socket.io": "^4.8.1",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.18",
    "@types/express": "^4.17.22",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.10.5",
    "@types/socket.io": "^3.0.2",
    "@types/uuid": "^9.0.8",
    "cross-env": "^7.0.3",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}